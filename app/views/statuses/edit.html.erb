<h1>Edit Monster</h1>
<%= form_tag("/statuses/"+@status.id.to_s,:method=>:patch) do %>
<div class="form-group">
    <label for="name">Name</label>
    <%= text_field :monster, :name  ,class:"form-control" ,id:"name" ,value:@status.name%>
</div>

<div class="form-group">
    <label for="attack">Attack</label>    
    <%= text_field :monster, :attack ,class:"form-control" ,id:"attack" ,value:@status.attack%>
</div>    
    
<div class="form-group">
    <label for="defence">Defence</label>    
    <%= text_field :monster, :defence  ,class:"form-control" ,id:"defence" ,value:@status.defence%>
</div>       

<div class="form-group">
    <label for="star">Star</label>
    <%=select_tag 'monster[star_id]',options_from_collection_for_select(@stars, :id, :name),class:"form-control" ,id:"star"%>
</div>
    <%= submit_tag "作成",class:"btn btn-primary"%>
<% end%>