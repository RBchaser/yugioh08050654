<h1>トータル</h1>
<% @totals.each do|total|%>
  <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading"><%= total.name%>
        <p><%= total.star.name%></p>
          <div class="buttons">
            <a href="/statuses/<%= total.id%>" data-method="delete"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            <a href="/statuses/<%= total.id%>/edit"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
          </div>
        </div>
        <div class="panel-body">
          ATK:<%= total.attack%><br>
          DFC:<%= total.defence%><br>
          <p>TTL:<%= total.attack+total.defence%></p>
        </div>
      </div>
  </div>
<%end%>